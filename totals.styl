.metrics
	margin: 2em 0;
	overflow: hidden;
	padding: 10px;
	.metric
		display: inline-block;
		zoom: 1;
		width: 16.5%;
		text-align: center;
		color: #333;


		.metric-title
			font-size: 12px;
			color: #666;
			font-weight: normal;
			display: block;

		.metric-value
			margin-top: .4em;
			font-size: 28px;
			line-height: 36px;
			font-weight: normal;
			display: block;

		&:hover
			text-decoration: none;

.metrics-horizontal
	padding-top: 10px;
	padding-bottom: 10px;

.metrics-vertical
	margin: 0;
	padding-bottom: 22px;
	.metric
		width: auto;
		display: block;
		text-align: left;
		margin-top: 11px;
		overflow: hidden;

		.metric-title, .metric-value
			display: inline-block;
		.metric-title
			margin-top: 7px;
			padding-bottom: 10px;
			display: block;
			float: left;
			padding-left: 10px;
		.metric-value
			margin: 0;
			float: left;
			width: 50%;
			text-align: right;
